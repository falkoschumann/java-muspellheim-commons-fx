<?import de.muspellheim.commons.fx.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.muspellheim.commons.fx.demo.DemoViewController" stylesheets="@../style.css"
      prefHeight="400.0" prefWidth="600.0">
    <TitledPane collapsible="false" text="Date Interval Picker">
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <Label styleClass="title" text="Interval:"/>
            <DateIntervalPicker fx:id="dateIntervalPicker"/>
            <Label fx:id="dateIntervalPickerValue"/>
        </HBox>
    </TitledPane>
    <TitledPane collapsible="false" text="Status Bar">
        <StatusBar fx:id="statusBar" text="Status text">
            <rightItems>
                <ToggleButton fx:id="statusBarProcessButton" text="Process"/>
            </rightItems>
        </StatusBar>
    </TitledPane>
    <TitledPane collapsible="false" text="Dialogs">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Button mnemonicParsing="false" onAction="#showAbout" text="About"/>
            <Button mnemonicParsing="false" onAction="#showException" text="Exception"/>
        </HBox>
    </TitledPane>
    <TitledPane collapsible="false" text="Validation">
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <Label styleClass="title" text="Number:"/>
            <TextField fx:id="validatedText"/>
        </HBox>
    </TitledPane>
</VBox>
